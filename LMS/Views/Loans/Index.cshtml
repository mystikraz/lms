@model IEnumerable<Model.Loan>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Loans", FormMethod.Get))
{
    //the following are search options
    <b> Search Option: </b>
    @Html.RadioButton("option", "memberName")<text>Member Name</text>
    @Html.RadioButton("option", "id")<text>Member Id</text>
    @Html.RadioButton("option", "bookTitle")<text>Book Title</text>
    @Html.TextBox("search")

    <input type="submit" name="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
           Book Title
        </th>
        <th>
            Members Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoanOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.DateReturned)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Books.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Members.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.DateReturned)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
